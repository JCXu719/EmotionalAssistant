<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.EmotionalAssistant" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="statistics_titleFontStyle">
        <item name="android:fontFamily">@font/sourcehansans_cn_normal</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/pink</item>
    </style>

    <style name="Config_TitleFontStyle">
        <item name="android:fontFamily">@font/sourcehansans_cn_normal</item>
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">@color/pink</item>
    </style>

    <style name="Statistics_BtnStyle" parent="Widget.AppCompat.Button">
        <item name="android:textSize">8sp</item>
    </style>



</resources>