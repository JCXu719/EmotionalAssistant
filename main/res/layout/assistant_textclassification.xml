<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <EditText
            android:id="@+id/assistant_textClassification_et"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:hint="请输入需要识别的文字（英文）"></EditText>

        <Button
            android:id="@+id/assistant_textClassification_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="识别"
            android:textColor="@color/white"
            style="@style/Statistics_normalFontStyle1"
            android:background="@drawable/trends_button"
            android:layout_gravity="center"></Button>

        <TextView
            android:id="@+id/assistant_textClassification_tv"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="情感分类结果"
            android:layout_gravity="center"
            android:gravity="center"></TextView>


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>