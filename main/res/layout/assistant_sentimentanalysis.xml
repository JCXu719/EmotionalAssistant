<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <Button
            android:id="@+id/assistant_sentimentanalysis_textClassificationBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="文本识别"
            android:layout_marginLeft="150dp"
            android:layout_marginRight="150dp"></Button>

        <Button
            android:id="@+id/assistant_sentimentanalysis_imageClassificationBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="图像识别"
            android:layout_marginLeft="150dp"
            android:layout_marginRight="150dp"></Button>

        <Button
            android:id="@+id/assistant_sentimentanalysis_audioClassificationBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="语音识别"
            android:layout_marginLeft="150dp"
            android:layout_marginRight="150dp"></Button>

        <Button
            android:id="@+id/assistant_sentimentanalysis_videoClassificationBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="视频识别"
            android:layout_marginLeft="150dp"
            android:layout_marginRight="150dp"></Button>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>